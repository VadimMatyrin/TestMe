@model TestMe.Models.Test

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>@Model.TestName</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="TestName" class="control-label"></label>
                <input asp-for="TestName" class="form-control" />
                <span asp-validation-for="TestName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TestDuration" class="control-label"></label>
                <input asp-for="TestDuration" class="form-control" />
                <span asp-validation-for="TestDuration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
@if (User.Identity.Name == Model.AppUser.UserName)
{
    <div>
        <a asp-action="Index">Your tests</a>
    </div>
}
else
{
    <div>
        <a asp-action="Index" asp-controller="Admin">Administration</a>
    </div>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function () {
            $("#TestDuration").rules('remove', 'range');
        });
    </script>
}
