@page
@model Model
@{
    ViewData["Title"] = "Register";
}

<html lang="ru">
<head>
    <!--<link rel="stylesheet" type="text/css" href="bootstrap/css/bootstrap.min.css">-->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="~/css/fonts.css">
    <link rel="stylesheet" type="text/css" href="~/css/main.css">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="utf-8">

    <title>TestMe</title>

</head>
<body>

    <div class="container-main col-lg-12">

        <!-- LEFT SIDE -->
        <div class="left-side-container col-lg-4 col-lg-push-1">
            <div class="col-lg-12">
                <a href="" id="header_logo">TestMe</a>
            </div>
            <div class="col-lg-12 visible-lg" style="padding-top: 25%"></div>
            <div class="col-lg-12 main-left-block no-padding">
                <span class="col-lg-9 titletext">
                    New learning application
                </span>
                <span class="col-lg-9 text">
                    Create your own tests for learning. Improve performance by preparing for the test with the help of tests, as well as many other things.
                </span>
                <a href="#" class="col-lg-9">To know more</a>
            </div>
        </div>

        <!-- RIGHT SIDE -->
        <div class="right-side-container col-lg-7 col-lg-push-1">
            <span class="col-lg-9 titletext">
                Choose your role
            </span>
            <div class="choose_role col-lg-9">
                <!-- ROLE STUDENT -->
                <div class="row">
                    <div class="col-lg-6 role">
                        <button id="iAmStudent" data-toggle="modal" data-target="#RegisterStudent">
                            <span class="icon-Student"></span>
                            <span class="titletext">I am student</span>
                            <span class="text">I want add my own test and prepare for it</span>
                        </button>
                    </div>
                    <!-- ROLE TEACHER -->
                    <div class="col-lg-6 role">
                        <button id="iAmTeacher" data-toggle="modal" data-target="#RegisterTeacher">
                            <span class="icon-Teacher"></span>
                            <span class="titletext">I am teacher</span>
                            <span class="text">I want add test to check students knowledge</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>







    <!-- REGISTER STUDENT -->
    <div class="modal fade" id="RegisterStudent" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog  modal-lg">
            <div class="modal-content">




                <div class="modal-body">
                    <div class="container-fluid no-padding">
                        <div class="col-lg-5  padding-top-5 left-modal">
                            <span class="icon-Student"></span>
                            <span class="titletext white-color" ые>Let's get you set up</span>
                            <span class="text white-color">It should only take a couple minutes</span>

                        </div>
                        <div class="col-lg-6 col-lg-push-1   right-modal">
                            <span class="register-hello">Hello, I'm Student</span>
                            <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="register">
                                <div>
                                    <label asp-for="RegisterModel.Name" class="col-lg-3"></label>
                                    <input asp-for="RegisterModel.Name" class="col-lg-7" placeholder="James Smith" />
                                </div>
                                <input asp-for="RegisterModel.UserType" value="@UserTypes.Student" type="hidden" />
                                <!-- CLEARFIX -->
                                <div class="clearfix visible-lg"></div>
                                <div>
                                    <label asp-for="RegisterModel.Group" class="col-lg-3"></label>
                                    <input asp-for="RegisterModel.Group" class="col-lg-7" placeholder="PZPI-17-4" />
                                </div>
                                <!-- CLEARFIX -->
                                <div class="clearfix visible-lg"></div>
                                <div>
                                    <label asp-for="RegisterModel.Email" class="col-lg-3"></label>
                                    <input asp-for="RegisterModel.Email" class="col-lg-7" placeholder="example@nure.ua" title="Domain must be 'nure.ua'" pattern=".+(@@nure.ua)$" />
                                </div>
                                <!-- CLEARFIX -->
                                <div class="clearfix visible-lg"></div>
                                <div>
                                    <label asp-for="RegisterModel.Password" class="col-lg-3"></label>
                                    <input asp-for="RegisterModel.Password" class="col-lg-7" placeholder="**********" />
                                </div>
                                <!-- CLEARFIX -->
                                <div class="clearfix visible-lg"></div>
                                <div>
                                    <label asp-for="RegisterModel.ConfirmPassword" class="col-lg-3"></label>
                                    <input asp-for="RegisterModel.ConfirmPassword" class="col-lg-7" placeholder="**********" />
                                </div>

                                <!-- CLEARFIX -->
                                <div class="clearfix visible-lg"></div>
                                <div>
                                    <button id="Register" class="col-lg-push-3 col-lg-7">
                                        REGISTER
                                    </button>
                                </div>
                                <!-- CLEARFIX -->
                                <div class="clearfix visible-lg"></div>
                                <div>
                                    <a class="col-lg-push-3 padding-bottom col-lg-7" style="text-align: center;" onclick="$('#RegisterStudent').modal('hide')" data-toggle="modal" data-target="#LoginStudent" href="/login.html">I already have account</a>
                                </div>


                            </form>
                        </div>
                    </div>
                </div>



            </div>
        </div>
    </div>

    <!-- REGISTER TEACHER -->
