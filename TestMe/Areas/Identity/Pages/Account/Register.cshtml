                                </div>
                                <input asp-for="RegisterModel.UserType" value="@UserTypes.Teacher" type="hidden" />
                                <!-- CLEARFIX -->
                                <div class="clearfix visible-lg"></div>
                                <div>
                                    <label asp-for="RegisterModel.Email" class="col-lg-3"></label>
                                    <input asp-for="RegisterModel.Email" class="col-lg-7" placeholder="example@nure.ua" "Domain must be 'nure.ua'" pattern=".+(@@nure.ua)$"/>
                                </div>
                                <!-- CLEARFIX -->
                                <div class="clearfix visible-lg"></div>
                                <div>
                                    <label asp-for="RegisterModel.Password" class="col-lg-3"></label>
                                    <input asp-for="RegisterModel.Password" class="col-lg-7" placeholder="**********" />
                                </div>
                                <!-- CLEARFIX -->
                                <div class="clearfix visible-lg"></div>
                                <div>
                                    <label asp-for="RegisterModel.ConfirmPassword" class="col-lg-3"></label>
                                    <input asp-for="RegisterModel.ConfirmPassword" class="col-lg-7" placeholder="**********" />
                                </div>

                                <!-- CLEARFIX -->
                                <div class="clearfix visible-lg"></div>
                                <div>
                                    <button id="Register" class="col-lg-push-3 col-lg-7">
                                        REGISTER
                                    </button>
                                </div>
                                <!-- CLEARFIX -->
                                <div class="clearfix visible-lg"></div>
                                <div>
                                    <a class="col-lg-push-3 padding-bottom col-lg-7" style="text-align: center;" onclick="$('#RegisterTeacher').modal('hide')" data-toggle="modal" data-target="#LoginTeacher" href="/login.html">I already have account</a>
                                </div>


                            </form>
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </div>


    <!-- LOGIN TEACHER -->
    <div class="modal fade" id="LoginStudent" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">


                <div class="modal-body">
                    <div class="container-fluid no-padding">
                        <div class="col-lg-5  padding-top-5 padding-bottom-5 left-modal">
                            <span class="icon-Student"></span>
                            <span class="titletext padding-top-5 white-color" ые>Let's get you sign in</span>
                            <span class="text  white-color">It should only take a couple minutes</span>

                        </div>
                        <div class="col-lg-6 col-lg-push-1   right-modal">
                            <span class="register-hello">Hello, I'm Student</span>
                            <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="register">
                                <div>
                                    <label asp-for="LoginModel.Username" class="col-lg-3"></label>
                                    <input asp-for="LoginModel.Username" class="col-lg-7" placeholder="example@nure.ua" />
                                </div>
                                <!-- CLEARFIX -->
                                <div class="clearfix visible-lg"></div>
                                <div>
                                    <label asp-for="LoginModel.Password" class="col-lg-3"></label>
                                    <input asp-for="LoginModel.Password" class="col-lg-7" placeholder="**********" />
                                </div>
                                <!-- CLEARFIX -->
                                <div class="clearfix visible-lg"></div>
                                <div class="col-lg-12">
                                    <div style="padding-top: 3px;" class="col-lg-1 col-lg-push-3">
                                        <label id="rememberStudent">
                                            <input asp-for="LoginModel.RememberMe" class="hidden" id="RememberMeStudent" />
                                        </label>
                                    </div>
                                    <label asp-for="LoginModel.RememberMe" class=" label_for_remember col-lg-6 col-lg-push-4" for="RememberMeStudent"></label>
                                </div>

                                <!-- CLEARFIX -->
                                <div class="clearfix visible-lg"></div>
                                <div>
                                    <button id="Register" class="col-lg-push-3 col-lg-7">
                                        SIGN IN
                                    </button>
                                </div>
                                <!-- CLEARFIX -->
                                <div class="clearfix visible-lg"></div>
                                <div>
                                    <a class="col-lg-push-3 padding-bottom col-lg-7" style="text-align: center;" onclick="$('#LoginStudent').modal('hide')" data-toggle="modal" data-target="#RegisterStudent" href="login.html">I have`t account</a>
                                </div>


                            </form>
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </div>

    <!-- LOGIN TEACHER -->
    <div class="modal fade" id="LoginTeacher" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">


                <div class="modal-body">
                    <div class="container-fluid no-padding">
                        <div class="col-lg-5  padding-top-5 padding-bottom-5 left-modal">
                            <span class="icon-Teacher"></span>
                            <span class="titletext padding-top-5 white-color" ые>Let's get you sign in</span>
                            <span class="text  white-color">It should only take a couple minutes</span>

                        </div>
                        <div class="col-lg-6 col-lg-push-1   right-modal">
                            <span class="register-hello">Hello, I'm Teacher</span>
                            <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="register">
                                <div>
                                    <label asp-for="LoginModel.Username" class="col-lg-3"></label>
                                    <input asp-for="LoginModel.Username" class="col-lg-7" placeholder="example@nure.ua" />
                                </div>
                                <!-- CLEARFIX -->
                                <div class="clearfix visible-lg"></div>
                                <div>
                                    <label asp-for="LoginModel.Password" class="col-lg-3"></label>
                                    <input asp-for="LoginModel.Password" class="col-lg-7" placeholder="**********" />
                                </div>
                                <!-- CLEARFIX -->
                                <div class="clearfix visible-lg"></div>
                                <div class="col-lg-12">
                                    <div style="padding-top: 3px;" class="col-lg-1 col-lg-push-3">
                                        <label id="rememberStudent">
                                            <input asp-for="LoginModel.RememberMe" class="hidden" id="RememberMeStudent" />
