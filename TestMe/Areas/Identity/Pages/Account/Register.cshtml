                                    </div>
                                    <label asp-for="LoginModel.RememberMe" class=" label_for_remember col-lg-6 col-lg-push-4" for="RememberMeStudent"></label>
                                </div>

                                <!-- CLEARFIX -->
                                <div class="clearfix visible-lg"></div>
                                <div>
                                    <button id="Register" class="col-lg-push-3 col-lg-7">
                                        SIGN IN
                                    </button>
                                </div>
                                <!-- CLEARFIX -->
                                <div class="clearfix visible-lg"></div>
                                <div>
                                    <a class="col-lg-push-3 padding-bottom col-lg-7" style="text-align: center;" onclick="$('#LoginTeacher').modal('hide')" data-toggle="modal" data-target="#RegisterTeacher" href="login.html">I have`t account</a>
                                </div>


                            </form>
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </div>


    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
    <!-- Последняя компиляция и сжатый JavaScript -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    <script>
        document.getElementById('rememberTeacher').onclick = function color() {
            var b = document.getElementById('rememberTeacher')
            if (b.style.background != "rgb(41, 68, 134)") {
                b.style.background = "rgb(41, 68, 134)"
            }
            else if (b.style.background == "rgb(41, 68, 134)") {
                b.style.background = "#fff"
            }
            color();
        }
        document.getElementById('rememberStudent').onclick = function color() {
            var b = document.getElementById('rememberStudent')
            if (b.style.background != "rgb(41, 68, 134)") {
                b.style.background = "rgb(41, 68, 134)"
            }
            else if (b.style.background == "rgb(41, 68, 134)") {
                b.style.background = "#fff"
            }
            color();
        }
    </script>
</body>
</html>